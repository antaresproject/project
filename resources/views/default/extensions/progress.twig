{% extends "antares/foundation::layouts.antares.clear" %}

{% block content %}
    <div id="install-progress-console" data-preview-url="{{ previewUrl }}" data-stop-url="{{ stopUrl }}"></div>

    <style>
        #install-progress-console {
            width:100%;
            height:100%;
            padding:5px 10px;
            box-sizing:border-box;
            border:none;
            border-radius:0;
            background:{{ consoleTheme.black }};
            color:white;
            font-family: "Consolas", "Ubuntu Mono", "Monaco", monospace;
            font-size:12px;
            text-align:left;
            overflow-y:scroll;
            overflow-x:hidden;
            white-space:pre-wrap;
            position:absolute;
            top:0;
            left:0;
            right:0;
            bottom:0;
            z-index:50;
        }
    </style>
{% endblock %}