<!DOCTYPE html>
<html lang="en">
    <head>        
        {% block head %}
            {% include 'antares/foundation::layouts.antares.partials._head_webpack' %}
        {% endblock %}                    
    </head>
    <body>
        <div id="app-wrapper" class="app-install">
            <div class="app-content">                
                <section class="main-content nopadding">
                    <div class="grid-container grid-container--2col grid-container--no-padd {{grid_container_class}}">                       
                        <div class="grid-col grid-col--menu">                            
                            <div class="menu-aside-container">
                            {% block left_panel_content %}{% endblock %}                                
                        </div>
                    </div>
                    <div class="grid-col grid-col--container">
                        {{ set_meta('header::class', 'main-header') }}
                        {% block metas %}            {% endblock %}                    
                        {% include 'antares/foundation::components.messages' %}                            
                        {% block content %}
                        {% endblock %}    
                    </div>
                </div>
            </section>
        </div>
    </div>
    {% include 'antares/foundation::layouts.antares.partials._scripts_webpack' %}                
    <script src="/webpack/forms_basic.js"></script>

    <script>
        $(document).ready(function () {
            $('.card > * > *, .tbl-c > *,form').css('opacity', '1');
        });
    </script>   
</body>
</html>
