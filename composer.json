    "require": {
        "composer/composer": "^1.4",
        "composer-plugin-api": "^1.1",
        "antaresproject/core": "dev-0.9.2.x-module_extension_dev",
        "antaresproject/component-logger": "0.9.2.1-dev",
        "antaresproject/component-updater": "0.9.2.1-dev",
        "antaresproject/component-translations": "0.9.2.1-dev",
        "antaresproject/component-widgets": "0.9.2.1-dev",
        "antaresproject/component-tester": "0.9.2.1-dev",
        "antaresproject/component-notifications": "0.9.2.1-dev",
        "antaresproject/component-customfields": "0.9.2.1-dev",
        "antaresproject/component-control": "0.9.2.1-dev",
        "antaresproject/component-automation": "0.9.2.1-dev",
        "antaresproject/component-search": "0.9.2.1-dev",
        "antaresproject/component-api": "0.9.2.1-dev",
        "antaresproject/component-ban-management": "0.9.2.1-dev",
        "antaresproject/component-two-factor-auth": "0.9.2.1-dev",
        "laravel/framework": "5.4.*",
        "laravie/html": "5.4.*",
        "mnsami/composer-custom-directory-installer": "1.1.*",
        "barryvdh/laravel-ide-helper": "^2.0@dev",
        "barryvdh/laravel-debugbar": "^2.2@dev",
        "doctrine/dbal": "^2.5@dev",
        "predis/predis": "v1.1.*",
        "barryvdh/laravel-cors": "v0.8.*",
        "twig/twig": "v1.30.*",                                 
        "rcrowe/twigbridge": "^0.9.0",
        "regulus/activity-log": "^0.6.7",
        "arcanedev/log-viewer": "^4.3",
        "prettus/laravel-request-logger": "^1.0",
        "barryvdh/laravel-snappy": "^0.3.3",
        "tymon/jwt-auth": "1.0.*",
        "phpunit/phpunit": "~5.7",
        "sensiolabs/ansi-to-html": "^1.1"
    },    
    "require-dev": {
        "antaresproject/component-module": "dev-master",
        "fzaninotto/faker": "master",
        "mockery/mockery": "0.9.*",
        "symfony/security-core": "master",
        "davejamesmiller/laravel-breadcrumbs": "dev-master",
        "linfo/linfo": "dev-master"
    },
    "autoload": {
        "classmap": [
            "resources/database",
            "src/core",
            "src/components",
            "src/modules"
        ],
        "psr-4": {
            "App\\": "app/",
            "Installer\\": "app/Installer/src",
            "Antares\\Control\\": "src/components/control/src",
            "Antares\\Brands\\": "src/core/brands/src",
            "Antares\\Users\\": "src/components/users/src"
        }
    },
    "extra": {
        "installer-paths": {
            "./src/core": ["antaresproject/core"]
        }
    },    
    "scripts": {
        "pre-update-cmd": [
            "Installer\\EnvironmentScripts::preUpdate"
        ],
        "pre-install-cmd": [
            "Installer\\EnvironmentScripts::preInstall"
        ],
        "post-install-cmd": [
            "Installer\\ComposerScripts::postUpdate",
            "php artisan clear-compiled",
            "php artisan ide-helper:generate",
            "php artisan key:generate"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate",
            "php artisan key:generate"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "secure-http": false
    }    
}
